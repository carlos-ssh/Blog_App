<h1 class="title">New Article</h1>

<%= form_for @figure, builder: BulmaFormBuilder do |f| %>
  <%= f.form_error %>

  <div class="field">
      <%= f.label :photo, class: 'label' %>
      <div class="control">
        <%= f.text_field :photo, class: 'input' %>
      </div>
      <%= f.field_error :photo %>
  </div>

  <div class="field">
      <%= f.label :title, class: 'label' %>
      <div class="control">
        <%= f.text_field :title, class: 'input' %>
      </div>
      <%= f.field_error :title %>
  </div>
  
  <div class="field">
      <%= f.label :text, class: 'label' %>
      <div class="control">
        <%= f.text_field :text, class: 'input' %>
      </div>
      <%= f.field_error :text %>
  </div>
<% end %>

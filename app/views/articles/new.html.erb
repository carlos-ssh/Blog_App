<h1>New Post</h1>

<%= form_for :article, url: articles_path do |f| %>

    <p>
        <%= f.label :title %> <br>
        <%= f.text_field :title %>
    </p>

    <p>
        <%= f.label :text %> <br>
        <%= f.text_area :text %>
    </p>

    <p>
        <%= f.submit "Submit", disable_with: 'Submiting...' %>
    </p>

<% end %>